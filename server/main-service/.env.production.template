# Production Environment Configuration
NODE_ENV=production
PORT=8080

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/eclipser-prod

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production
JWT_EXPIRES_IN=7d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Redis Configuration (Use either REDIS_URL or individual configs)
REDIS_URL=redis://username:password@redis-server:6379
# OR
# REDIS_HOST=your-redis-host
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Frontend Configuration
CLIENT_URL=https://yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# PostgreSQL Configuration (if needed)
PG_HOST=your-postgres-host
PG_PORT=5432
PG_USER=your-pg-user
PG_PASSWORD=your-pg-password
PG_DATABASE=eclipser-prod

# Server Configuration
DEFAULT_PORT=8080
