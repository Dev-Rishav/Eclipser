# Production Environment Configuration for Contest Service
NODE_ENV=production
PORT=8081

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/contest-service-prod

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Redis Configuration
REDIS_URL=redis://username:password@redis-server:6379

# Frontend Configuration
CLIENT_URL=https://yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=https://yourdomain.com

# Code Execution Configuration
CODE_EXECUTION_TIMEOUT=30000

# Server Configuration
DEFAULT_PORT=8081

# Memory Monitoring
ENABLE_MEMORY_MONITOR=false
